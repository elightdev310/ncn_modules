function ncn_loc_country($name, $id, $state_id, $disabled, $required, $country='US') {
	
	if ($country == null || $country=="") {
		$country = 'US';
	}
	
	//$countries = profile_location_countries();
	$countries = array(
		'CA' => 'Canada',
		'US' => 'United States'
	);
	
	$field = "<select name=\"$name\" id=\"$id\"";
	if ($disabled == true) {
		$field .= " disabled=\"disabled\"";
	}
	$field .= ">\r\n";
	
	foreach ($countries as $iso=>$full_name) {
		$selected = "";
		if ($country == $iso ) { $selected = "selected"; }
		$field .= "\t<option value=\"$iso\" $selected>$full_name ($iso)</option>\r\n";
	}
	$field .= "</select>\r\n";
	
	ob_start();
?>
<script type="text/javascript">	
	(function ($) {
		$(document).ready(function() {
			$('#<?php echo $id; ?>').bind('change', onchange_country);
		});	
		
		function onchange_country() {
			var _url = Drupal.settings.basePath + "ajax/ncn_loc_change_state";			
			jQuery.ajax({
				url: 	_url,
				data: 	{
					'country': $('#<?php echo $id; ?>').val()
				},
				type:	'POST',
				error: function() {
					alert('Error: It is failed to change list of states/provinces.');
				},
				success: function(response) {
					$('#<?php echo $state_id; ?>').html(response);
				}	// END OF SUCESS FUNCTION
			});
			return;			
		}
		
	})(jQuery);	
</script>
<?php
	$javascript = ob_get_contents();
	ob_end_clean();
	
	$field = $field . " \r\t" . $javascript;
	return $field;
}

function ncn_loc_state($name, $id, $disabled, $required, $state, $country='US') {
	if ($country == null || $country=="") {
		$country = 'US';
	}
	
	$provinces = profile_location_states($country);
	array_shift($provinces);	
	$field = "<select name=\"$name\" id=\"$id\"";
	if ($disabled == true) {
		$field .= " disabled=\"disabled\"";
	}
	$field .= ">\r\n";
	
	foreach ($provinces as $abbrev=>$full_name) {
		$selected = "";
		if ($state == $abbrev ) { $selected = "selected"; }
		$field .= "\t<option value=\"$abbrev\" $selected>$full_name ($abbrev)</option>\r\n";
	}
	$field .= "</select>\r\n";
	
	return $field;
}

function ncn_loc_change_state() {
	$country = $_REQUEST['country'];

	$provinces = profile_location_states($country);	// get provinces by using country
	array_shift($provinces);
	$field = "";
	
	foreach ($provinces as $abbrev=>$full_name) {
		$field .= "<option value=\"$abbrev\" >$full_name ($abbrev)</option>\r\n";
	}
	
	echo $field;
}

